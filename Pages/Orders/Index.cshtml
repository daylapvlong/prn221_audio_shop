@page
@model MuzicStore.Pages.Orders.IndexModel
@{
}

<div style="background: #1c1c1c !important; border: none !important; padding-bottom: 80px;" class="card mt-50 mb-50">
    <div class="col d-flex"><span class="text-muted" id="orderno">order #@Model.Order.Id</span></div>
    <div class="gap">
        <div class="col-2 d-flex mx-auto"> </div>
    </div>
    <div style="display: flex;
                text-align: center;
                font-size: 2rem;
                font-weight: bold;
                padding: 5%" class="mx-auto">
        Thank you for your order @Model.Order.Buyer.Name!
    </div>
    <div class="main">
        <span style="margin: 1vh 0 2vh 0; font-size: 1rem">
            <h3>Payment Summary</h3>
        </span>

        <div class="row d-flex align-items-center py-2 border-bottom">
            <div class="col-3">Audio</div>
            <div class="col-3"></div>
            <div class="col-2">Mood</div>
            <div class="col-2">Genre</div>
            <div class="col-2 d-flex justify-content-end">Price</div>
        </div>

        <div class="row d-flex align-items-center py-2">
            @foreach(var audio in @Model.Order.OrderDetails)
            {
                <div class="col-3"> <img style="border-radius: 7px;" class="img-fluid p-3" src="@audio.Audio.Image"> </div>
                <div class="col-3">
                    <div class="row d-flex">
                        <p><b>@audio.Audio.Title</b></p>
                    </div>
                    <div class="row d-flex">
                        <p class="text-muted">@audio.Audio.Artist.Name</p>
                    </div>
                </div>
                <div class="col-2">
                    <div class="row d-flex">
                        <p><b>@audio.Audio.Mood.MoodName</b></p>
                    </div>
                </div>
                <div class="col-2">
                    <div class="row d-flex">
                        <p><b>@audio.Audio.Genre.Genre1</b></p>
                    </div>
                </div>
                <div class="col-2 d-flex justify-content-end">
                    <p><b>$@audio.Audio.Price</b></p>
                </div>
            }
        </div>
        
        <hr>
        <div class="total">
            <div class="row">
                <div class="col d-flex justify-content-end"> <b> Purchase Date:</b> </div>
                <div class="col d-flex justify-content-end"> <b>$@Model.Order.PurchaseDate</b> </div>
            </div>
            <div class="row">
                <div class="col d-flex justify-content-end"> <b> Total:</b> </div>
                <div class="col d-flex justify-content-end"> <b>$@Model.Order.Price</b> </div>
            </div> 
            <div class="row pt-3">
                <div class="d-flex justify-content-end">
                    <a style="width: 180px" class="btn btn-outline-primary" asp-page="/Audio/List"> Back to Audio List </a>
                </div>
            </div>
        </div>
    </div>
</div>
