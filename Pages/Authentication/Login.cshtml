@page
@model MuzicStore.Pages.Authentication.LoginModel
@{
    string message = ViewData["msg"] as string;
}

<div class="d-flex justify-content-center" style="background-color: #1c1c1c; height: 100vh; align-items: center;">
    <div class="card p-3" style="background-color: #1c1c1c; color: white;">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group p-3">
                <label asp-for="User.Username" class="control-label"></label>
                <input asp-for="User.Username" class="form-control" style="background-color: #495057; color: white;" />
                <span asp-validation-for="User.Username" class="text-danger"></span>
            </div>
            <div class="form-group p-3">
                <label asp-for="User.Password" class="control-label"></label>
                <input type="password" asp-for="User.Password" class="form-control" style="background-color: #495057; color: white;" />
                <span asp-validation-for="User.Password" class="text-danger"></span>
            </div>
            <div class="fw-bold text-danger p-3">
                @{
                    if (ViewData["msg"] != null)
                    {
                        @ViewData["msg"].ToString()
                    }
                }
            </div>

            <div class="form-group p-3">
                <input type="submit" value="Login" class="btn btn-outline-primary" />
                <a class="link-secondary btn btn-outline-primary text-white text-decoration-none" asp-area="" asp-page="/Authentication/Signup">Sign Up</a>
            </div>
        </form>
    </div>
</div>
